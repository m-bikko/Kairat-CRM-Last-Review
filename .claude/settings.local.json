{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(npx create-next-app@latest . --typescript --app --no-tailwind --eslint --no-src-dir --import-alias \"@/*\")",
      "Bash(npx @chakra-ui/cli typegen:*)",
      "Bash(npx tailwindcss:*)"
    ],
    "deny": [],
    "ask": []
  },
  "model": "sonnet",
  "hooks": {
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "afplay -v 0.7 \"/System/Library/Sounds/Glass.aiff\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "afplay -v 0.7 \"/System/Library/Sounds/Glass.aiff\""
          }
        ]
      }
    ]
  }
}
